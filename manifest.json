{
  "manifest_version": 3,
  "name": "ScriptLynx",
  "version": "1.0.1",
  "description": "Blocks scripts and resources on any website by defined patterns and paths.",
  "permissions": [
    "storage",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "options_page": "options.html",
  "action": {
    "default_title": "ScriptLynx"
  }
}
